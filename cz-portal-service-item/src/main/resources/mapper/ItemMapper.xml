<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.mapper.ItemMapper">


    <resultMap id="item" type="com.cz.domain.Item">
        <id property="id" column="item_id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="image" column="image"/>
        <result property="describe" column="describe"/>
        <association property="category" column="category" javaType="com.cz.domain.Category">
            <id property="id" column="category_id"/>
            <result property="parentId" column="parent_id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>

    <select id="listHotItems" resultMap="item">
       SELECT
            item.id as item_id,
            item.name,
            item.price,
            item.image,
            item.describe,
            category.id as category_id,
            category.name,
            category.parent_id
        FROM
            sys_item item
        LEFT JOIN sys_item_hot item_hot
          on item.id = item_hot.item_id
        LEFT JOIN sys_category category
          on item.category_id = category.id
    </select>
</mapper>